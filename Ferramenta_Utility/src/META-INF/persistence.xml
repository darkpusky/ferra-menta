<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<!-- si possono creare più persistence unit, dipende dalla necessità-->
	<persistence-unit name="ferramenta">
		<!-- JNDI di Wildfly -->
		<non-jta-data-source>java:/Ferramenta</non-jta-data-source>
		
		<!-- classi che fanno la persistenza-->
		<!--<class></class>-->
		<class>models.Utente</class>
		<class>models.Prodotto</class>
		<class>models.Storico</class>
	</persistence-unit>
</persistence>
